{% extends 'templates/app.twig' %}

{% block content %}

    <div class="login-message" >PŘIHLÁŠENÍ</div>

    <div class="row">
        <div class="col"></div>
        <div class="col-6">
            <div class="card fw-medium pt-2">
                <div class="card-title bg-black bg-opacity-25 pb-2 pt-2" id="adminator-signin-title">Sign In</div>
                <div class="card-text" id="adminator-signin-form" >
                    <form action="{{ url_for('auth.signin') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="slimUsername" id="email" placeholder="you@domain.com" class="form-control" value="{{ username }}">
                            {# {% if errors.email %}
                            <span class="hel-block">{{ errors.email | first }}</span>
                            {% endif %} #}

                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="slimPassword" id="password" class="form-control">
                            {# {% if errors.password %}
                            <span class="hel-block">{{ errors.password | first }}</span>
                            {% endif %} #}

                        </div>

                        <button type="submit" class="btn btn-primary" id="adminator-signin-submit">Sign In</button>

                        {{ csrf()|ident(12) }}

                        <input type="hidden" name="redirect" value="{{ redirect }}">
                    </form>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
{% endblock %}
