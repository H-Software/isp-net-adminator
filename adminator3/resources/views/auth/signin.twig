{% extends 'templates/app.twig' %}

{% block content %}

	<div class="login-message" >PŘIHLÁŠENÍ</div>

    <div class="row">
		<div class="col"></div>
    	<div class="col-6">
    		<div class="card">
    			<div class="card-title">Sign In</div>
    			<div class="card-text">
				{# "{{path_for('auth.signin')}}"  #}
    				<form action="{{ path_for('login') }}" method="post">
    					<div class="form-group{{ errors.email ? ' has-error' : '' }}">
    						<label for="email">Email</label>
    						<input type="email" name="slimUsername" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                            <span class="hel-block">{{ errors.email | first }}</span>
                            {% endif %}
    					</div>

    					<div class="form-group{{ errors.password ? ' has-error' : '' }}">
    						<label for="password">Password</label>
    						<input type="password" name="slimPassword" id="password" class="form-control">
                            {% if errors.password %}
                            <span class="hel-block">{{ errors.password | first }}</span>
                            {% endif %}
    					</div>
						<button type="submit" class="btn btn-link">Sign In</button>

                        {{ csrf.field | raw }}
    				</form>
    			</div>
    		</div>
    	</div>
		<div class="col"></div>
    </div>
{% endblock %}