<div class="row">
    <div class="col"></div>
    <div class="col-6">

    {% if flash.getMessage('info') %}
        {% for msg in flash.getMessage('info') %}
        <div class="alert alert-info">
            {{ msg }}
        </div>
        {% endfor %}
    {% endif %}

    {% if flash.getMessage('error') %}
        {% for msg in flash.getMessage('error') %}
        <div class="alert alert-danger">
            {{ msg }}
        </div>
        {% endfor %}
    {% endif %}
    </div>
    <div class="col"></div>
</div>
