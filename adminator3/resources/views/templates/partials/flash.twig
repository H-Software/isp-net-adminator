<div class="row">
    <div class="col"></div>
    <div class="col-6">

    {% if flash.getMessage('info') %}
        <div class="alert alert-info">
            {{ flash.getMessage('info')|first }}
        </div>
    {% endif %}

    {% if flash.getMessage('error') %}
        <div class="alert alert-danger">
            {{ flash.getMessage('error')|first }}
        </div>
    {% endif %}
    </div>
    <div class="col"></div>
</div>
